{
  "name": "@solid-soda/voters",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "ci": "yarn s lint && yarn types",
    "prepare": "yarn build",
    "types": "tsc --noEmit",
    "s": "yarn soda"
  },
  "dependencies": {
    "@solid-soda/scripts": "^1.0.7"
  },
  "devDependencies": {
    "rimraf": "^2.6.2",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn types",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "yarn soda lint"
    ],
    "*.{js,jsx,ts,tsx,css,json}": [
      "yarn soda pretty",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
